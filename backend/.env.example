# ====================
# SERVER CONFIGURATION
# ====================
PORT=5000
NODE_ENV=development

# ====================
# SHOP CONFIGURATION
# White-label settings - customize for each coffee shop client
# ====================

# Basic Shop Information
SHOP_NAME="Barren Ground Coffee"
SHOP_NAME_SHORT="Barren Ground"
SHOP_ID=barrenground
SHOP_EMAIL=hello@barrengroundcoffee.com
SHOP_SUPPORT_EMAIL=support@barrengroundcoffee.com
SHOP_PHONE="(867) 873-3030"

# Business Settings
CURRENCY=CAD
CURRENCY_SYMBOL=$
TAX_RATE=0.05
TIMEZONE=America/Edmonton

# Order Configuration
MIN_ORDER_VALUE=0
MAX_ORDER_VALUE=500
DEFAULT_PREP_TIME=15
SCHEDULING_MAX_DAYS=1
ALLOW_GUEST_CHECKOUT=true

# Payment Configuration
PAYMENT_CAPTURE_METHOD=automatic
ALLOW_SAVED_PAYMENT_METHODS=true

# ====================
# DATABASE
# ====================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/barrenground
DB_NAME=barrenground
DB_SCHEMA=public
DB_POOL_SIZE=20

# ====================
# STRIPE PAYMENT
# ====================
STRIPE_SECRET_KEY=sk_test_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_key_here

# ====================
# AUTHENTICATION
# ====================
# CRITICAL SECURITY: JWT_SECRET MUST be at least 32 characters in production
# Generate with: openssl rand -base64 32
# DO NOT use the default value in production - application will refuse to start
JWT_SECRET=your_jwt_secret_here_change_in_production_minimum_32_characters_required
JWT_EXPIRATION_DAYS=7
REFRESH_TOKEN_EXPIRATION_DAYS=30
MAX_LOGIN_ATTEMPTS=5
REQUIRE_EMAIL_VERIFICATION=false

# ====================
# GOOGLE OAUTH 2.0
# ====================
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# ====================
# FRONTEND URLs
# ====================
FRONTEND_URL=http://localhost:8890
EMPLOYEE_DASHBOARD_URL=http://localhost:8889
ALLOWED_ORIGINS=http://localhost:8890,http://localhost:8889

# ====================
# EMAIL CONFIGURATION
# ====================
# SendGrid Configuration (sign up at sendgrid.com for 100 free emails/day)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
FROM_EMAIL=orders@barrengroundcoffee.com
EMAIL_FROM_NAME="Barren Ground Coffee"
EMAIL_REPLY_TO=hello@barrengroundcoffee.com

# Email Templates (set to false to disable)
EMAIL_ORDER_CONFIRMATION=true
EMAIL_ORDER_READY=true
EMAIL_ORDER_CANCELLED=true
EMAIL_WELCOME=false
EMAIL_PASSWORD_RESET=true

# ====================
# FEATURE FLAGS
# Enable/disable features per client
# ====================
FEATURE_MEMBERSHIP=true
FEATURE_DELIVERY=false
FEATURE_REWARDS=false
FEATURE_GIFTCARDS=false
FEATURE_CATERING=false
FEATURE_OAUTH=true
