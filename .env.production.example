# ===========================================
# BARREN GROUND COFFEE - PRODUCTION ENVIRONMENT
# ===========================================
# Copy this file to .env and fill in your values

# ====================
# DATABASE
# ====================
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD
DB_NAME=barrenground

# ====================
# SECURITY (REQUIRED)
# ====================
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_32_CHAR_MIN_SECRET

# ====================
# STRIPE PAYMENTS
# ====================
STRIPE_SECRET_KEY=sk_live_your_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_key_here

# ====================
# EMAIL (SendGrid)
# ====================
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=orders@yourdomain.com

# ====================
# URLS (Update with your domain)
# ====================
FRONTEND_URL=https://order.yourdomain.com
EMPLOYEE_DASHBOARD_URL=https://staff.yourdomain.com
VITE_API_URL=https://api.yourdomain.com
VITE_WS_URL=wss://api.yourdomain.com
ALLOWED_ORIGINS=https://order.yourdomain.com,https://staff.yourdomain.com

# ====================
# SHOP CONFIGURATION
# ====================
VITE_SHOP_ID=barrenground

# ====================
# GOOGLE OAUTH (Optional)
# ====================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ====================
# PORT CONFIGURATION
# ====================
BACKEND_PORT=5000
CUSTOMER_PORT=8890
EMPLOYEE_PORT=8889
